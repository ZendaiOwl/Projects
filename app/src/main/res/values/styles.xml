<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Task" parent="Theme.Kanban">
        <item name="android:color">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="textView" parent="Theme.Kanban">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="editText" parent="Theme.Kanban">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="cardView" parent="Theme.Kanban">
        <item name="android:background">@color/white</item>
    </style>
    <style name="large" parent="Theme.Kanban">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/red_hat_display</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="normal" parent="Theme.Kanban">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/red_hat_text</item>
        <item name="android:textSize">12sp</item>
